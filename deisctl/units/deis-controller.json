{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"deis-controller",
      "labels":{
         "name":"deis-controller"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"deis-controller"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"deis-controller"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"deis-controller",
                  "image":"registry.smothiki.io:5000/deis/controller:git-bca9e36",
                   "env":[
                     {
                       "name" : "HOST",
                       "value" : "10.240.84.7"
                     }
                   ],
                   "volumeMounts": [
                    { "name": "logs",
                      "mountPath": "/data"}
                    ]
               }
            ],
            "volumes":[
              { "name": "logs",
                "hostPath": {
                    "path": "/var/lib/deis/store"}
              }
            ]
         }
      }
   }
}
