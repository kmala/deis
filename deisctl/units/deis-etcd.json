{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"deis-etcd1",
      "labels":{
         "name":"deis-etcd1"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"deis-etcd1"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"deis-etcd1"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"deis-etcd",
                  "image":"registry.smothiki.io:5000/deis/etcd:latest",
                  "command": [
                            "/etcd","-name","etcd1","-advertise-client-urls","http://10.0.210.196:2379,http://10.0.210.196:4001",
                            "-initial-cluster","etcd1=http://10.0.210.196:2380,etcd3=http://10.0.211.100:2380,etcd4=http://10.0.160.151:2380",
                            "-listen-client-urls","http://0.0.0.0:2379,http://0.0.0.0:4001","-initial-advertise-peer-urls","http://10.0.210.196:2380",
                            "-listen-peer-urls","http://0.0.0.0:2380","-initial-cluster-token","etcd-cluster","-data-dir","/var/etcd/data",
                            "-initial-cluster-state","new"
                          ],
                  "ports":[
                      { "name": "serverport",
                        "containerPort": 2380,
                        "hostPort": 2380}
                      ],
                   "volumeMounts": [
                      { "name": "datadir",
                        "mountPath": "/var/etcd/data"
                      }
                    ]
               }
            ],
            "volumes":[
              {
                "name": "datadir",
                "emptyDir": {}
              }
            ]
         }
      }
   }
}
